@{
    ViewData["Title"] = "Index";

}
<div class="vh-100 container-fluid">
    <div class="row">
        @await Html.PartialAsync("_Menu")
        <div class="col-lg-10 col-md-8 d-flex flex-column">
            <div>
                <h1>Available items:</h1>
                @await Html.PartialAsync("_info")
            </div>
            <div class="d-lg-flex bg-secondary ">
                <div class="m-2 p-2 bg-light">
                    <h5 class="mt-l-5">Categories</h5>
                    <form class=" ">

                        <button class="btn btn-primary" type="submit" id="GetItem-btn">Save</button>
                    </form>
                </div>
                <div class="pb-lg-3 pt-lg-3">
                    <table id="Item-table" class="table table-striped table-bordered" >
                        <thead>
                            <tr>
                                <th>ItemId</th>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <div id="btn-place">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script defer src="~/js/Home.js"></script>
<script defer src="~/js/SubCart.js"></script>
@{
    ViewData["Title"] = "Index";

}
<div class="vh-100 container-fluid">
    <div class="row">
        @await Html.PartialAsync("_Menu")
        <div class="col-lg-10 p-5 col-md-8 col-sm-12 p-0  d-flex  flex-column">
            <div>
                <h1>Available items:</h1>
            </div>
            <div class="d-flex bg-secondary p-2">
                <div class="m-2 p-2 bg-light">
                    <h5 class="mt-5">Categories</h5>
                    <form>

                        <button class="btn btn-primary" type="submit" id="GetItem-btn">Save</button>
                    </form>
                </div>
                <div>
                    <table id="Item-table" class="table table-striped table-bordered" style="width: 100%">
                        <thead>
                            <tr>
                                <th>ItemId</th>
                                <th class="w-50">Name</th>
                                <th>Quantity</th>
                                <th>Category</th>
                                <th >Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <div id="btn-place">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script defer src="~/js/Home.js"></script>